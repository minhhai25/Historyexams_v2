@model IEnumerable<Historyexams.Models.Taikhoan>

@{
    ViewData["Title"] = "Tài khoản";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý @ViewBag.Title  </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="card">
        <div class="card-header">
            <div class="row card-tools">
                <form action="" method="get" class="form-inline">
                    <div class="form-group">
                        <label class="sr-only" for="keyword">Tìm theo tên loại</label>
                        <input class="form-control" name="title" id="keyword" placeholder="Nhập mã cần tìm" value="@ViewBag.keyword">
                    </div>
                    <button type="submit" class="btn btn-default mr-1"><i class="fas fa-search"></i></button>
                </form>
                @* <div>
                
                    <a class="btn btn-danger" id="BtnDeleteAll">Xóa</a>
                </div>
 *@
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>
                            Mã tài khoản
                        </th>
                        <th>
                           Họ và tên
                        </th>
                       
                        <th>
                           Điện thoại
                        </th>
                        <th>
                           Email
                        </th>
                        <th>
                           Giới tính
                        </th>
                        <th>
                            Địa chỉ
                        </th>
                        <th>
                           Ngày tạo
                        </th>
                        
                        <th>
                           Ngày sửa
                        </th>
                        <th>
                           IsActive
                        </th>
                        
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {
                            var strCheck = item.Isactive == true ? "<i class='fa fa-check text-success'></i>" :
                            "<i class='fas fa-times text-danger'></i>"; //kiểm tra xem IsActicve là true hay false
                            <tr id="trow_@item.Id">

                                <td>
                                    @Html.DisplayFor(modelItem => item.Mataikhoan)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Hoten)
                                </td>
                                @* <td>
                                    @Html.DisplayFor(modelItem => item.Matkhau)
                                </td> *@
                                <td>
                                    @Html.DisplayFor(modelItem => item.Dienthoai)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Gioitinh)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Diachi)
                                </td>
                                <td>@string.Format("{0:dd/MM/yyy}", item.Ngaytao)</td>
                                
                                <td>@string.Format("{0:dd/MM/yyy}", item.Ngaysua)</td>
                               
                                <td class="text-center">
                                    <a href='#' data-id="@item.Id" class="btnActive">@Html.Raw(strCheck)</a>
                                </td>

                                <td class="btn-action" style="text-align:center">
                                   
                                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-info"></i></a> 
                                   

                                </td>
                                <td><input type="checkbox" class="cbkItem" value="@item.Id" /></td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào </td>
                        </tr>
                    }
                </tbody>
            </table>

            @*  <div class="clearfix" style="margin-top: 2rem;">
            <ul class="pagination pagination-sm m-0 float-right">
            @Html.PagedListPager(Model, page => Url.Action("index", new { page = page }), new PagedListRenderOptions
            {
            LiElementClasses = new string[] { "page-item" },
            PageClasses = new string[] { "page-link" }
            })
            </ul>
            </div> *@
        </div>
    </div>
</section>
          @section scripts {
    <script src="~/js/Checkbox.js"></script>
    <script>
        var baseUrl = '/admins/taikhoans/deleteAll';
        var activeUrl = '/admins/taikhoans/IsActive';
    </script>
          }

