@model Historyexams.Models.Traloi

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Chi tiết </h1>
<style>
    h4 {
        margin-left: 20px;
        padding-top: 10px;
    }

    h1 {
        padding-left: 5%;
        padding-top: 1rem;
        padding-bottom: 1rem;
    }

    dl.row {
        margin: 5px;
        padding: 10px;
    }

    dt.col-sm-2, dd.col-sm-10 {
        margin: 10px 0;
    }

    .container {
        background: white;
        border-radius: 20px;
    }

    .button {
        margin-left: 6%;
        margin-top: 15px;
    }
</style>
<div class="container">
    <h4>Trả lời</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PaChon)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaChon)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PaDung)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PaDung)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Lan)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lan)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ngaythi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ngaythi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IddtchNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IddtchNavigation.Id)
        </dd>
    </dl>
</div>
<div class="button">
    <a asp-action="Edit" class="btn btn-danger" asp-route-id="@Model.Id">Sửa</a>
    <a asp-action="Index" class="btn btn-success">Quay lại</a>

</div>