@model Historyexams.Models.Taikhoan;

<div class="row" style="text-align:center;">

	<div class="col-lg-12 col-12" style="text-align:center;transform: translate(10px, 40px);">
		<h3 class="mb-4 pb-2">Đăng ký</h3>
	</div>

	<div class="d-flex mt-4 " style="justify-content:center">
		<form asp-action="Register" method="post" class="custom-form contact-form" role="form">
			<div class="row">
				<div class="col-lg-12 col-12">
					<div class="form-floating">
						<input type="text" name="Hoten" id="Hoten" class="form-control" placeholder="Tên" required >

						<label for="floatingInput">Họ tên</label>
					</div>
				</div>

				<div class="col-lg-12 col-12">
					<div class="form-floating">
						<input type="text" name="Mataikhoan" id="Mataikhoan" class="form-control" placeholder=" mã tài khoản" required>

						<label for="floatingInput">Mã tài khoản</label>
					</div>
				</div>
				<div class="col-lg-12 col-12">
					<div class="form-floating">
						<input name="Email" id="Email" class="form-control" placeholder="Email address" required>

						<label for="floatingInput">Email </label>
					</div>
				</div>

				<div class="col-lg-12 col-12">
					<div class="form-floating">
						<input type="password" name="Matkhau" id="Matkhau" class="form-control" placeholder="mật khẩu" required>

						<label for="floatingInput">Mật khẩu</label>
					</div>
				</div>
				

				<div class="row">
					<div class="col-lg-3 col-3 "><a asp-action="Login">Đăng nhập</a></div>
					<div class="col-lg-6 col-6 ms-auto">
						<button type="submit" class="form-control" >Đăng ký</button>
						<span style="color:red">@TempData["errorRegisty"] </span>
					</div>
				</div>
			</div>
		</form>
	</div>



</div>
<style>
	div#sticky-wrapper {
		display: none;
	}

	form.custom-form.contact-form {
		width: 400px;
	}
</style>