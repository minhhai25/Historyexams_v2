@model Taikhoan;

<div class="row" style="text-align:center;transform: translate(10px, 40px);">

	<div class="col-lg-12 col-12" style="text-align:center;">
		<h3 class="mb-4 pb-2">Đăng nhập</h3>
	</div>

	<div class="d-flex " style="justify-content:center">
		<form asp-action="Login" method="post" class="custom-form contact-form" role="form">
			<div class="row">
		

				<div class="col-lg-12 col-12">
					<label for="Email" class="form-label">Email</label>
					<input asp-for="Email" class="form-control" />
					<span asp-validation-for="Email" class=" text-danger"></span>
				</div>

				<div class="col-lg-12 col-12">
					<label for="Matkhau" class="form-label">Mật khẩu<i id="eyeIcon" class="fa-regular fa-eye strikethrough" onclick="myFunction()"></i></label>
					<input type="password" asp-for="Matkhau" class="form-control" id="myInput" />
					<span asp-validation-for="Matkhau" class=" text-danger"></span>
				
				</div>
				<div class="row">
					<div class="col-lg-3 col-3 "><a asp-action="Register">Đăng ký</a></div>
					<div class="col-lg-6 col-6 ms-auto">

						<button type="submit" class="form-control">Đăng nhập</button>

					</div>
					<h2>@ViewBag.Message</h2>
				</div>
			</div>
		</form>
	</div>



</div>
<script>
	function myFunction() {
		var x = document.getElementById("myInput");
		var eyeIcon = document.getElementById("eyeIcon");
		if (x.type === "password") {
			x.type = "text";
			eyeIcon.classList.remove("strikethrough");
		} else {
			x.type = "password";
			eyeIcon.classList.add("strikethrough");
		}
	}
</script>
<style>
	div#sticky-wrapper {
		display: none;
	}
	form.custom-form.contact-form {
		width: 400px;
	}

	.fa-eye.strikethrough:before {
		content: "\f070"; /* Unicode cho biểu tượng 'eye-slash' */
	}
</style>
